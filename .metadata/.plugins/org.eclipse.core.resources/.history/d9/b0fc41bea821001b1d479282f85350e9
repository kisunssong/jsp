<script type="text/javascript">
function add1() {
	var a1=prompt("1번입력: ")
}
function add2() {
	var a2=prompt("2번입력: ")
}
a1=parseInt(a1)
a2=parseInt(a2)
function sum() {
	alert(+(a1+a2))
}
</script>
