<html>
<head>
<script type="text/javascript">
function add1() {
	var a1=prompt("첫번쨰 숫자 입력: ")
}
function add2() {
	var a2=prompt("두번쨰 숫자 입력: ")
}
a1=parseInt(a1)
a2=parseInt(a2)
function sum() {
	document.write("합계: "+(a1+a2))
}
</script>
</head>
<body>
<form>
<input type="buttom" value="1" onClick="add1()">
<input type="buttom" value="2" onClick="add2()">
<input type="buttom" value="3" onClick="sum()">
</form>
</body>
